<h1><%="#{@user.first_name} #{@user.last_name}'s Profile"%></h1>
<%= link_to "Edit Patient's Personal Information", edit_user_path %>
<br />
<%= link_to "Delete Patient", @user, method: :delete %>
<br/>
<h3>Scheduled Appointments</h3>
<table class="ui celled table">
  <tr>
    <th>Doctor Name</th>
    <th>Appointment Date</th>
    <th>Appointment Time</th>
    <th>Appointment Type</th>
    <th>Delete / Edit Appointment</th>
  </tr>
    <% @user.appointments.each do |a| %>
  <tr>
    <td><%= link_to a.doctor.doctor_full_name, doctor_path(a.doctor.id) %></td>
    <td><%= a.date.strftime("%m/%d/%Y") %></td>
    <td><%= a.time.strftime("%l:%M %p")%></td>
    <td><%= a.appointment_type %></td>
    <td><%= link_to "delete", [@user,a], method: :delete %> / <%= link_to "edit",  edit_user_appointment_path(@user,a) %></td>
  </tr>
    <%end%>
</table>
<button class="ui button">
<%= link_to "Create Appointment", new_user_appointment_path(@user) %>
</button>
<br />
