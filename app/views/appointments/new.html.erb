<h1>Appointment for <%= @user.first_name %></h1>

<%= form_for [@user, @appointment] do |f| %>
  <%= f.label :doctor %>
  <%= f.select :doctor_id, @doctors.collect { |d| [d.doctor_full_name, d.id] } %>
  <br />
  <%= f.label :time %>
  <%= f.datetime_select :time %>
  <br />
  <%= f.label :appointment_type %>
  <%= f.text_field :appointment_type %>
  <br />
  <%= f.submit %>
<% end %>