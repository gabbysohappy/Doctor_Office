  <%= form_for [@user, @appointment], :html => { class: "ui form"} do |f| %>

  <div class="field">
      <%= f.label :doctor %>
      <%= f.select :doctor_id, @doctors.collect { |d| [d.doctor_full_name, d.id] }, {}, { class: "ui compact selection dropdown" }%>
  </div>

  <div class="two fields">

    <div class="field">
      <%= f.label :date %>
      <%= f.date_field :date, required: true%>      
    </div>

    <div class="field">
      <%= f.label :time %>
      <%= f.time_field :time, required: true %>
    </div>

  </div>

  <div class="field">
    <%= f.label :appointment_type %>
    <%= f.text_field :appointment_type %>
  </div>
  
    <%= f.button :Submit, type: :submit, class: "ui primary button" %>

  <% end %>
